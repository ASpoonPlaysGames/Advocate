<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        x:Name="window"
        x:Class="Advocate.Pages.MainWindow"
        mc:Ignorable="d"
        Title="Advocate" Height="480" Width="800"
       
        Background="{DynamicResource MainContentForegroundBrush}"
        ResizeMode="CanMinimize">
    <Grid>

        <hc:TabControl ShowCloseButton="False" IsDraggable="False" IsAnimationEnabled="False" ShowContextMenu="False"
                       TabItemWidth="150" TabItemHeight="25">
            <hc:TabItem Header="Skin Converter">
                <Frame  x:Name="SkinConverterFrame" BorderThickness="0" Background="{DynamicResource MainContentForegroundBrush}"/>
            </hc:TabItem>
            <hc:TabItem Header="Nose Art Creator">
                <Frame  x:Name="NoseArtCreatorFrame" BorderThickness="0" Background="{DynamicResource MainContentForegroundBrush}"/>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</Window>
